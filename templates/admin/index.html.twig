{% extends 'admin.html.twig' %}

{% block body %}
	<!--begin::Table-->
	<div class="table-responsive">
		<table class="table table-head-custom table-vertical-center" id="kt_advance_table_widget_2">
			<thead>
				<tr class="text-uppercase">
					<th class="pl-0" style="min-width: 100px">id</th>
					<th style="min-width: 120px">description</th>
					<th style="min-width: 150px">Date & Heure</th>
					<th style="min-width: 130px">Docteur</th>
					<th style="min-width: 150px">Status</th>

					<th class="pr-0 text-right" style="min-width: 160px">action</th>
				</tr>
			</thead>
			<tbody>
				{% for rendez_vous in rendez_vouses %}
					<tr>
						<td class="pl-0">
							<a href="#" class="text-dark-75 font-weight-bolder text-hover-primary font-size-lg">{{ rendez_vous.id }}</a>
						</td>
						<td>
							<span class="text-dark-75 font-weight-bolder d-block font-size-lg">{{ rendez_vous.label }}</span>
						</td>
						<td>
							<span class="text-dark-75 font-weight-bolder d-block font-size-lg">{{ rendez_vous.dateDuRdv ? rendez_vous.dateDuRdv|date('Y-m-d') : '' }}
								|
								{{ rendez_vous.heureDuRdv ? rendez_vous.heureDuRdv|date('H:i:s') : '' }}
							</span>
						</td>
						<td>
							<span class="text-dark-75 font-weight-bolder d-block font-size-lg">{{ rendez_vous.doctor }}</span>
						</td>
						<td>
							{% if rendez_vous.isArchived == 'Yes' %}
								<span class="label label-lg label-light-success label-inline">Accepté</span>
							{% else %}
								<span class="label label-lg label-light-danger label-inline">Annulé</span>
							{% endif %}

						</td>
						<td class="pr-0 text-right">
							<a href="#" class="btn btn-icon btn-light btn-hover-primary btn-sm">
								<span
									class="svg-icon svg-icon-md svg-icon-primary">
